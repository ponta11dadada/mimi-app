<h2><%= @tweet.user.email %>さん投稿</h2>
<br>
<p><%= @tweet.title %></p>
<p><%= @tweet.body %></p>

<h2>コメント一覧</h2>
<% @comments.each do |c| %>
  <div>
    <%= c.content %>
    <hr>
  </div>
<% end %>


<%= form_with model:@comment, url:tweet_comments_path(@tweet.id), local:true do |form| %>
  <%= form.text_field :content %>
  <br>
  <%= form.hidden_field :tweet_id, value:@tweet.id %>
  <%= form.submit 'コメントする' %>
<% end %>

<%= link_to "ホームへ戻る", tweets_path %>