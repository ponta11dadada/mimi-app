<h3 class="page-header">ツイート一覧</h3>
<ul class="list-group">
  <% @tweet.each do |tweet| %>
  <li class="list-group-item">
  	<span class="badge text-danger"><%= link_to "[削除]",user_tweet_path(@tweet, tweet.id),method: :delete %></span>
    <%= link_to tweet.title, user_tweet_path(@tweet, tweet.id) %>
    <%= tweet.body %>
  </li>
  <% end %>
</ul>