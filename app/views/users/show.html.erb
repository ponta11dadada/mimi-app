<h2><%= @user.name %>さんのページ</h2>

<%= link_to "お悩み一覧へ", tweets_path, class:"btn btn-primary" %>
<br>
<% if @user.id == current_user.id %>
<p><%= link_to "登録情報の編集", edit_user_path(@user), class:"btn btn-primary" %></p>
<p><%= link_to "ユーザー情報の削除",user_path(@user), method: :delete, class:"btn btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %></p>
<% end %>

<h2><%= @user.name %>さんのお悩み投稿一覧</h2>
<br>
<% @my_tweets.each do |tweet| %>
<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>タイトル</th>
			<th>内容</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= tweet.title %></td>
			<td><%= tweet.body %></td>
			<% if tweet.user_id == current_user.id %>
			<td><%= link_to "投稿削除", tweet_path(tweet), class:"btn btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %></td>
			<% end %>
		</tr>
	</tbody>
</table>
<% end %>